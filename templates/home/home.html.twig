{% block title %}Accueil
{% endblock %}
{% block stylesheet%}
	<link rel="stylesheet" href="{{ asset('assets/dsfr/dist/dsfr.min.css') }}">
{% endblock %}
{% block body %}
	<main class="container my-5">
		<div class="fr-card fr-card--horizontal">
			<div class="fr-card__body">
				<div class="fr-card__content">
					<h3 class="fr-card__title">
						<a href="https://www.ac-bordeaux.fr/">Retour sur le site de l'académie</a>
					</h3>
					<p class="fr-card__desc">Retourner sur le site de l'académie.</p>
					<div class="fr-card__header">
						<div class="fr-card__img">
							<img
							class="fr-responsive-img" src="{{ asset('assets/dsfr/dist/artwork/pictograms/buildings/house.svg') }}" alt="Image test" style="width: 250px; height: 250px;"/>
						<!-- L’alternative de l’image (attribut alt) doit toujours être présente, sa valeur peut-être vide (image n’apportant pas de sens supplémentaire au contexte) ou non (porteuse de texte ou apportant du sens) selon votre contexte -->
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="fr-card ">
			<div class="fr-card__body">
				<div class="fr-card__content">
					<h3 class="fr-card__title">
						<a href="{{ path('generate_pdf') }}">Chevalet unique</a>
					</h3>

					<div class="fr-card__header">

						<div class="fr-card__img">
							<a href="{{ path('generate_pdf') }}">
								<img
								class="fr-responsive-img" src="{{ asset('assets/dsfr/dist/artwork/pictograms/document/contract.svg') }}" alt="Image test" style="width: 250px; height: 250px;"/>
							<!-- L’alternative de l’image (attribut alt) doit toujours être présente, sa valeur peut-être vide (image n’apportant pas de sens supplémentaire au contexte) ou non (porteuse de texte ou apportant du sens) selon votre contexte -->
